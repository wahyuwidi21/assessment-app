<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    app:cardCornerRadius="8dp"
    android:layout_margin="4dp"
    android:elevation="10dp"
    android:id="@+id/item_post">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingHorizontal="16dp"
        android:paddingVertical="21dp">

        <TextView
            android:id="@+id/post_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            tools:text="Judul Post"
            android:textSize="16sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <TextView
            android:id="@+id/post_user_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            tools:text="Nama Lengkap"
            android:textSize="12sp"
            android:layout_marginTop="8dp"
            app:layout_constraintStart_toStartOf="@id/post_title"
            app:layout_constraintTop_toBottomOf="@id/post_title"/>
        <TextView
            android:id="@+id/post_company_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            tools:text="Nama Perusahaan"
            android:textSize="12sp"
            android:layout_marginTop="5dp"
            app:layout_constraintStart_toStartOf="@id/post_user_name"
            app:layout_constraintTop_toBottomOf="@id/post_user_name"/>
        <TextView
            android:id="@+id/post_body"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            tools:text="Bodynya"
            android:textSize="12sp"
            android:layout_marginTop="15dp"
            app:layout_constraintStart_toStartOf="@id/post_user_name"
            app:layout_constraintTop_toBottomOf="@id/post_company_name"/>





    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>